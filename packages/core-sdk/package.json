{
  "name": "@syngenta/product-check-core",
  "version": "0.0.1",
  "description": "Core shared logic for Syngenta product verification (theme, API client, hooks, ports)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "private": false,
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --clean",
    "dev": "tsup src/index.ts --watch --dts --format cjs,esm",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
